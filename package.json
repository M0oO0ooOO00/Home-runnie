{
  "name": "homerunnie-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --ui=tui",
    "dev:stream": "turbo run dev --ui=stream",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.6",
    "turbo": "^2.3.3"
  },
  "lint-staged": {
    "apps/backend/**/*.{ts,js}": [
      "pnpm --filter @homerunnie/backend exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "apps/frontend/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter @homerunnie/frontend exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "packages/**/*.{ts,js,tsx}": [
      "pnpm --filter @homerunnie/shared exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "pnpm exec prettier --write"
    ]
  },
  "packageManager": "pnpm@10.16.0"
}
